%header
  .header-content
    = link_to 'Tipsy', root_path, class: 'header-content__logo'
    %ul.header-content__menu
      %li
        = link_to tags_path do
          %i.fa.fa-search.fa-lg
      %li
        = link_to new_post_path do
          %i.fa.fa-pencil-square-o.fa-lg
      %li
        - if signed_in?
          = link_to user_path(current_user.id) do
            = image_tag(current_user.image)
        - else
          = link_to tags_path do
            %i.fa.fa-user.fa-lg
